<div class="mt-5 d-flex justify-content-center ">
    <div class="card mb-0 w-50">
        <div class="card-body" style="height:38rem;">
            <div class="auth-full-page-content rounded d-flex p-3 my-2">
                <div class="w-100">
                    <div class="d-flex flex-column h-100">
                        <div class="auth-content my-auto">
                            <div class="text-center">
                                <h5 class="mb-0">Register</h5>
                                <p class="text-muted mt-2">Task Management System User Registration</p>
                            </div>
                            <hr/>
                            <form class="mt-4 pt-2" asp-controller="Auth" asp-action="UserRegistration">
                                <div class="form-floating form-floating-custom mb-4">
                                    <input required type="text" class="form-control" id="input-username" name="Username" placeholder="Enter User Name" autocomplete="off">
                                    <label for="input-username" class="fw-bold">Username</label>
                                </div>

                                <div class="form-floating form-floating-custom mb-4">
                                    <input required type="text" class="form-control" id="input-firstname" name="FirstName" placeholder="Enter First Name" autocomplete="off">
                                    <label for="input-firstname">First Name</label>
                                </div>

                                <div class="form-floating form-floating-custom mb-4">
                                    <input required type="text" class="form-control" id="input-lastname" name="LastName" placeholder="Enter Last Name" autocomplete="off">
                                    <label for="input-lastnameinput-lastname">Last Name</label>
                                </div>

                                <div class="form-floating form-floating-custom mb-4 auth-pass-inputgroup">
                                    <input required type="text" class="form-control pe-5" id="input-email" name="Email" placeholder="Enter Email" autocomplete="off">
                                    <label for="input-email">Email</label>
                                </div>

                                <div class="form-floating form-floating-custom mb-4 auth-pass-inputgroup">
                                    <input required type="password" class="form-control pe-5" id="password-input" name="Password" placeholder="Enter Password" autocomplete="off">
                                    <label for="password-input">Password</label>
                                </div>

                                <div>
                                    <button class="btn btn-success w-100 waves-effect waves-light" type="submit">Sign Up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4 pt-3 text-center card-footer">
            <p class="text-muted mb-0">
                Have an account? <a href="@Url.Action("Login", "Auth")"
                                    class="text-primary fw-semibold"> Login </a>
            </p>
        </div>
    </div>
    <div class="card mb-0 w-50">
        <div class="mt-4 pt-3 text-center d-flex card-body align-items-center justify-content-center" style="height:38rem;">
            <p class="text-muted mb-0">
                Already an existing User? 
                &nbsp;
                <a href="@Url.Action("Login", "Auth")"
                                             class="text-primary fw-semibold">
                                             <h4>Login </h4> </a>
            </p>
        </div>
    </div>
</div>